            <table id="iottt" class="display table" cellspacing="0" width="95%">
              <thead>
                <tr>
                  <th>WB No.</th>
                  <th>Emp. Name</th>
                  <th>Emp.ID</th>
                  <th>Shift</th>
                  <th>Part No</th>
                  <th>Target</th>
                  <th>Lot size</th>
                  <!-- <th>Device</th> -->
                  <th>Count</th>
                  <!-- <th>Status</th> -->
                  <th>Actions</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% if @iot_data_yts %>
                <% @iot_data_yts.each do |iot_datum| %>
                  <% if iot_datum.status == 'Process Completed' %>
                    <tr class="greenn">
                    <% elsif iot_datum.status == 'Processing' && iot_datum.count > 0 %>
                    <tr class="green">
                    <% elsif iot_datum.status == 'YTS' %>
                    <tr class="red">
                    <% else %>
                    <tr>
                  <% end %>
